{
  "redirects": [
    {
      "source": "/adservices",
      "destination": "/ad-services",
      "permanent": true
    },
    {
      "source": "/jaipur",
      "destination": "/city/jaipur",
      "permanent": true
    },
    {
      "source": "/mumbai",
      "destination": "/city/mumbai",
      "permanent": true
    },
    {
      "source": "/delhi",
      "destination": "/city/delhi",
      "permanent": true
    },
    {
      "source": "/bangalore",
      "destination": "/city/bangalore",
      "permanent": true
    },
    {
      "source": "/pune",
      "destination": "/city/pune",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/sitemap.xml", "destination": "/sitemap.xml" },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        { "key": "Content-Type", "value": "application/xml" },
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Robots-Tag", "value": "index, follow" }
      ]
    }
  ]
} 